FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/solid";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    solid_bottom
    {
        type            zeroGradient;
    }
    solid_sides
    {
        type            zeroGradient;
    }
    front_back
    {
        type            empty;
    }
    solid_to_fluid
    {
        type            calculated;
        value           uniform 0;
    }
    procBoundary5to4
    {
        type            processor;
        value           uniform 1;
    }
    procBoundary5to7
    {
        type            processor;
        value           uniform 1;
    }
}


