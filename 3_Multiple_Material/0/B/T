FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/B";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    left
    {
        type            externalWallHeatFluxTemperature;
        kappa           solidThermo;
        Ta              uniform 275;
        h               uniform 5;
        kappaName       none;
        value           uniform 300;
    }
    bottom
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
    B_to_C
    {
        type            calculated;
        value           uniform 0;
    }
    B_to_A
    {
        type            calculated;
        value           uniform 0;
    }
}


