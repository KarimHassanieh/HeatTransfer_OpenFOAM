FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 200;

boundaryField
{
   top_bottom
    {
        type            zeroGradient;
    }

    right
    {
        type            oscillatingFixedValue;
        refValue       uniform 1;//refernce value of oscillation
        offset        292;//oscillation mean value offse
        amplitude     constant 20;// amplitude of oscillation
        frequency     constant 1.1574e-5;//frequency 1/86400 
        
    }

    left
    {
        type            fixedGradient;
        gradient          uniform 500; 
    }


        frontAndBack
    {
        type            empty;

    }
}

